{
  "general": {
    "input": "-i ",
    "output": "-o ",
    "runout": "> run_class2d.out ",
    "runerr": "2> run_class2d.err "
  },
  "relion_class2d": {
    "module": "module load relion/3.0-cluster/openmpi/3.1.2",
    "extra": "",
    "command": "mpirun  -np $NSLOTS `which relion_refine_mpi` ",
    "parameters": "--dont_combine_weights_via_disc --pool 100 --pad 2  --ctf  --iter 25 --tau2_fudge 2 --particle_diameter $$diameter --fast_subsets  --K $$K --flatten_solvent  --zero_mask  --oversampling 1 --psi_step 12 --offset_range 5 --offset_step 2 --norm --scale --no_parallel_disc_io  --j 1",
    "tail": "< /dev/null"
  }
}
